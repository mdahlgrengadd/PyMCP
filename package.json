{
  "name": "@shared/pymcp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "webpack serve --config webpack.config.cjs",
    "build": "webpack --mode production --config webpack.config.cjs",
    "dev": "webpack serve --config webpack.config.cjs",
    "type-check": "tsc --noEmit",
    "typegen": "node scripts/gen-types.mjs",
    "proxy": "node proxy-server.mjs",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:dev": "npm run build && npm run electron:compile && node node_modules/electron/cli.js .",
    "electron:build": "npm run build && npm run electron:compile && npm exec electron-builder",
    "electron:headless": "npm run build && npm run electron:compile && node node_modules/electron/cli.js . --headless"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@module-federation/enhanced": "^0.19.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.5.3",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "build": {
    "appId": "com.pymcp.electron",
    "productName": "PyMCP Server",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "public/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
