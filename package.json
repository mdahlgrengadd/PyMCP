{
  "name": "mcp-pyodide-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "typegen": "node scripts/gen-types.mjs",
    "proxy": "node proxy-server.mjs",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:dev": "npm run build && npm run electron:compile && node node_modules/electron/cli.js .",
    "electron:build": "npm run build && npm run electron:compile && npm exec electron-builder",
    "electron:headless": "npm run build && npm run electron:compile && node node_modules/electron/cli.js . --headless"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.10"
  },
  "build": {
    "appId": "com.pymcp.electron",
    "productName": "PyMCP Server",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "public/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
